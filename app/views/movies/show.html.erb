
<h1><%= @movie.title %></h1>
<iframe width="560" height="315" src=< %=\ " @movie.trailer(params[:id]) \"%>
  frameborder="0" allowfullscreen>
</iframe>
<h6>Genre: <%= @movie.genre %> Duration: <%= @movie.duration %></h6>
<p><%= @movie.description %></p>
<%= link_to 'Add Comment', new_movie_comment_path(@movie) %>
<h2>Comments</h2>
<% @movie.comments.each do |comment| %>
  <%= render 'comments/comment', { comment: comment } %>
  <%= link_to 'Edit Comment', edit_comment_path([@movie, comment]) %>
  <%= link_to "Delete", comment, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
<hr />
